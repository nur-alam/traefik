<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Demo Site Manager</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸš€ Demo Site Manager</h1>
            <p>Create and manage WordPress demo sites instantly</p>
        </div>
        
        <div class="create-section">
            <form class="create-form" id="createForm">
                <div class="form-group">
                    <label for="username">Username (optional)</label>
                    <input type="text" id="username" name="username" placeholder="Enter username or leave blank">
                </div>
                <button type="submit" class="create-btn" id="createBtn">
                    Create Demo Site
                </button>
            </form>
        </div>
        
        <div class="sites-section">
            <div class="sites-header">
                <h2>Active Demo Sites</h2>
                <button class="refresh-btn" onclick="loadSites()">ðŸ”„ Refresh</button>
            </div>
            
            <div id="alertContainer"></div>
            
            <div id="sitesContainer">
                <div class="loading">
                    <p>Loading sites...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let sites = [];
        
        // Load sites on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadSites();
        });
        
        // Handle form submission
        document.getElementById('createForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const createBtn = document.getElementById('createBtn');
            const username = document.getElementById('username').value;
            
            createBtn.disabled = true;
            createBtn.textContent = 'Creating...';
            
            try {
                const response = await fetch('/create-site', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username: username || undefined })
                });
                
                if (!response.ok) {
                    throw new Error(`Server error: ${response.status}`);
                }
                
                const result = await response.json();
                
                if (result.success) {
                    const loginLink = result.login_url || result.url;
                    showAlert('success', `Site created successfully! <a href="${loginLink}" target="_blank">Click here to auto-login</a>`);
                    document.getElementById('username').value = '';
                    
                    // Immediately reload sites list
                    loadSites();
                } else {
                    showAlert('error', result.error || 'Failed to create site');
                }
            } catch (error) {
                console.error('Create site error:', error);
                showAlert('error', 'Error: ' + error.message);
            } finally {
                createBtn.disabled = false;
                createBtn.textContent = 'Create Demo Site';
            }
        });
        
        async function loadSites() {
            const container = document.getElementById('sitesContainer');
            container.innerHTML = '<div class="loading"><p>Loading sites...</p></div>';
            
            try {
                const response = await fetch('/sites');
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    sites = data.sites;
                    renderSites();
                } else {
                    container.innerHTML = '<div class="empty-state"><h3>Error loading sites</h3><p>' + (data.error || 'Unknown error') + '</p></div>';
                }
            } catch (error) {
                console.error('Load sites error:', error);
                container.innerHTML = '<div class="empty-state"><h3>Network Error</h3><p>Failed to load sites: ' + error.message + '</p></div>';
            }
        }
        
        function renderSites() {
            const container = document.getElementById('sitesContainer');
            
            if (sites.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>No demo sites yet</h3>
                        <p>Create your first demo site using the form above</p>
                    </div>
                `;
                return;
            }
            
            const sitesHTML = sites.map(site => `
                <div class="site-card">
                    <a href="${site.url}" target="_blank" class="site-url">${site.url}</a>
                    <div class="site-info"><strong>Username:</strong> ${site.username}</div>
                    <div class="site-info"><strong>Created:</strong> ${new Date(parseInt(site.created_at)).toLocaleString()}</div>
                    <div class="site-info"><strong>Database:</strong> ${site.dbname}</div>
                    <div class="site-credentials">
                        <div class="site-info"><strong>Admin User:</strong> <code>${site.admin_user}</code></div>
                        <div class="site-info"><strong>Admin Pass:</strong> <code>${site.admin_pass}</code></div>
                    </div>
                    <div class="site-actions">
                        <a href="${site.url}" target="_blank" class="btn-small btn-visit">Visit Site</a>
                        <a href="${site.login_url}" target="_blank" class="btn-small btn-admin">Auto Login to Admin</a>
                    </div>
                </div>
            `).join('');
            
            container.innerHTML = `<div class="sites-grid">${sitesHTML}</div>`;
        }
        
        function showAlert(type, message) {
            const container = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            
            container.innerHTML = `<div class="alert ${alertClass}">${message}</div>`;
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>