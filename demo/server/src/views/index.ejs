<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test WordPress Demo Site</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Test WordPress Site</h1>
            <p>Create and manage test WordPress sites instantly</p>
        </div>

        <form class="create-form" id="createForm">
            <div class="form-group" style="display: none;">
                <label for="username">Username (optional)</label>
                <input type="text" id="username" name="username" placeholder="Enter username or leave blank">
            </div>
            <button type="submit" class="create-btn" id="createBtn">
                Create Site
            </button>
        </form>
        
        <div class="sites-section">
            <div class="sites-header">
                <h2>Active Sites</h2>
                <button class="refresh-btn" onclick="loadSites()">ðŸ”„ Refresh</button>
            </div>
            
            <div id="alertContainer"></div>
            
            <div id="sitesContainer">
                <div class="loading">
                    <p>Loading sites...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let sites = [];
        
        // Load sites on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadSites();
        });
        
        // Handle form submission
        document.getElementById('createForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const createBtn = document.getElementById('createBtn');
            const username = document.getElementById('username').value;
            
            createBtn.disabled = true;
            createBtn.textContent = 'Creating...';
            
            try {
                const response = await fetch('/api/site', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username: username || undefined }    )
                });

                console.log('response data', response); 
                
                const result = await response.json();
                
                console.log('response data', result); 
                
                if (result.success) {
                    const site = result.site || {};
                    showAlert('success', `Site created successfully! <a href="${site.siteurl}" target="_blank">${site.siteurl}</a>`);
                    document.getElementById('username').value = '';
                    setTimeout(() => loadSites(), 2000); // Reload sites after 2 seconds
                } else {
                    showAlert('error', result.error || 'Failed to create site');
                }
            } catch (error) {
                showAlert('error', 'Network error: ' + error.message);
            } finally {
                createBtn.disabled = false;
                createBtn.textContent = 'Create Demo Site';
            }
        });
        
        async function loadSites() {
            const container = document.getElementById('sitesContainer');
            container.innerHTML = '<div class="loading"><p>Loading sites...</p></div>';
            
            try {
                const response = await fetch('/api/sites');
                const data = await response.json();
                
                if (data.success) {
                    sites = data.sites;
                    renderSites();
                } else {
                    container.innerHTML = '<div class="empty-state"><h3>Error loading sites</h3><p>' + data.error + '</p></div>';
                }
            } catch (error) {
                container.innerHTML = '<div class="empty-state"><h3>Network Error</h3><p>Failed to load sites</p></div>';
            }
        }
        
        function renderSites() {
            const container = document.getElementById('sitesContainer');
            
            if (sites.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>No demo sites yet</h3>
                        <p>Create your first demo site using the form above</p>
                    </div>
                `;
                return;
            }
            
            const sitesHTML = sites.map(site => `
                <div class="site-card">
                    <a href="${site.siteurl}" target="_blank" class="site-url">${site.siteurl}</a>
                    <div class="site-info"><strong>Username:</strong> ${site.user}</div>
                    <div class="site-info"><strong>Password:</strong> ${site.password}</div>
                    <div class="site-info"><strong>Database:</strong> ${site.db_name}</div>
                    <div class="site-info"><strong>DB User:</strong> ${site.db_user}</div>
                    <div class="site-info"><strong>DB Pass:</strong> ${site.db_pass}</div>
                    <div class="site-info"><strong>Created:</strong> ${new Date(parseInt(site.created_at)).toLocaleString()}</div>
                    <div class="site-actions">
                        <a href="${site.siteurl}" target="_blank" class="btn-small btn-visit">Visit Site</a>
                        <a href="${site.siteurl}/wp-admin" target="_blank" class="btn-small btn-admin">Admin Panel</a>
                    </div>
                </div>
            `).join('');
            
            container.innerHTML = `<div class="sites-grid">${sitesHTML}</div>`;
        }
        
        function showAlert(type, message) {
            const container = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            
            container.innerHTML = `<div class="alert ${alertClass}">${message}</div>`;
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>